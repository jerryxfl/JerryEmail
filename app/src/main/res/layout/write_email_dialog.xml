<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_top_shape">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="写邮件"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="发送"
                android:textStyle="bold"
                android:textColor="#6b9ac9" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ecf0f1"/>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送方："
                android:textColor="#a4b0be" />
            <com.edu.cdp.custom.CircleOnlineAvatar
                android:id="@+id/avatar"
                android:layout_marginStart="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:showOnlineState="false"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ecf0f1"/>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收件方："
                android:textColor="#a4b0be" />
            <androidx.recyclerview.widget.RecyclerView
                android:overScrollMode="never"
                android:id="@+id/receiveRecycler"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ecf0f1"/>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主题："
                android:textColor="#a4b0be" />
            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@null"
                android:textCursorDrawable="@drawable/textcursor_shape"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ecf0f1"/>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/content"
                android:gravity="top|left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textCursorDrawable="@drawable/textcursor_shape"
                android:layout_marginBottom="60dp"/>

        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        app:cardElevation="20dp"
        android:id="@+id/controlBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/voice"
                    android:background="@null"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/voice"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"/>
                <ImageButton
                    android:id="@+id/html"
                    android:layout_marginStart="20dp"
                    android:background="@null"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/html"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"/>
                <ImageButton
                    android:id="@+id/accessory"
                    android:layout_marginStart="20dp"
                    android:background="@null"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/accessory"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <ImageButton
                android:id="@+id/add"
                android:layout_marginStart="20dp"
                android:background="@null"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/add"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>